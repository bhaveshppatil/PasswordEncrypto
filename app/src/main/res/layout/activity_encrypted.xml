<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.EncryptedActivity">

    <TextView
        android:id="@+id/tvEncryptedData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutBtn"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/dashes"
        android:drawableTop="@drawable/ic_baseline_content_copy_24"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="Encrypted Data"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/layoutBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnSaveEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="Copy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Space
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnHomeEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Space
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnCopyEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>